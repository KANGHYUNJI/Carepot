<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffeefaee"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text_user_phoneNum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text_guard_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_ff7e7a7a"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_guard_phoneNum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_ff7e7a7a"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_user_caution"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_ff7e7a7a"
        android:textSize="20dp" />


</LinearLayout>